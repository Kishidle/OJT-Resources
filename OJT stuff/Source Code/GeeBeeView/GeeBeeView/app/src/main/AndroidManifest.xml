<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seebee.geebeeview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".layout.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout.DatasetListActivity" />
        <activity android:name=".layout.DataVisualizationActivity" />
        <activity android:name=".layout.PatientListActivity" />
        <activity android:name=".layout.ViewPatientActivity" />
        <activity android:name=".layout.HPIListActivity" />
        <activity android:name=".layout.ViewHPIActivity" />
        <activity android:name=".layout.ViewImmunizationActivity" />
    </application>

</manifest>