    <!-- SeeBee styles -->
    <style name="DefaultText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/context_text_size</item>
        <item name="android:padding">@dimen/context_padding</item>
        <!--<item name="android:fontFamily">@font/rudiment</item>-->
    </style>

    <style name="SmallContextText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:padding">@dimen/small_context_padding</item>
        <!--<item name="android:fontFamily">@font/rudiment</item>-->
    </style>

    <style name="LabelText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:padding">@dimen/context_padding</item>
    </style>

    <style name="SmallLabelText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/small_label_text_size</item>
        <item name="android:padding">@dimen/small_context_padding</item>
    </style>

    <style name="TitleText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:padding">@dimen/context_padding</item>
        <!--
        <item name="android:fontFamily">@font/chawp</item>-->
    </style>

    <style name="DefaultButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/chalkoutline</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:padding">@dimen/context_padding</item>
        <item name="android:layout_margin">@dimen/context_margin</item>
    </style>

    <style name="DefaultSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/context_text_size</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>
